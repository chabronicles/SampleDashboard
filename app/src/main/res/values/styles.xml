<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlackText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="BlackText.SubHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="BlackText.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="GrayText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="GrayText.SubHeader">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="GrayText.Title">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="WhiteText.SubHeader">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="WhiteText.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Error">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Success">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

</resources>
